                    </div>
                    <div class="ui right attached basic mini blue labeled icon button">
                        <i class="unhide icon"></i>
                        View Metadata
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<div class="ui bottom attached tab segment" data-tab="used">
    <div class="ui list">
        {{#each catalogItems.used as |used_item|}}
