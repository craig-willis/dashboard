<style type="text/css">
    .ui.vertical.segment {
        padding-top: 8px;
        padding-bottom: 8px;
        padding-left: 16px;
    }
</style>

<div class="item">
    <div class="ui blurring vertical segment">
        <div class="ui inverted dimmer">
            <div class="content">
                <div class="center">
                    <div class="ui left attached mini blue labeled icon button" {{action 'copyToHome' item on='click'}}>
                        <i class="copy icon"></i>
                        Copy To Home
                    </div>
                    <div class="ui right attached mini blue labeled icon button" {{action 'viewMetadata' item on='click'}}>
                        <i class="unhide icon"></i>
                        View Metadata
                    </div>
                </div>
            </div>
        </div>
        <div class="ui two column grid">
            <div class="one wide column">
                {{provider-icon-for item.provider 'mini'}}
            </div>
            <div class="fifteen wide column">
                <div class="content">
                    <a class="header">{{item.name}}</a>
                    <div class="description">{{item.identifier}}</div>
                </div>
            </div>
        </div>
    </div>
</div>
