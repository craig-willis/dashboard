
<div class="search area">
            <div class="ui huge header">LOGIN</div>

    <div class="ui raised segment">
        <div class="ui stackable grid">
            <div class="ten wide column">
                <br>
                <br>
                <br>
              {{#each-in model as  |provider url|}}
                {{#if (eq provider "Globus")}}
                        <a class="ui large blue button" {{action "login" url}}>
                    Login Using {{provider}}
                  </a>
                {{/if}}
              {{/each-in}}
            </div>
            <div class="six wide right aligned column">
                <div class="ui small image">
                    <img class="logo backdrop" src="/images/whole_tale_logo.png">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="ui horizontal divider"></div>

{{#ui-accordion as |execute|}}
    <div class="title">
        <i class="dropdown icon"></i>
        <a class="ui blue header">Login questions?</a>
    </div>
    <div class="content">
        <div class="ui raised segment">
            <div class="ui header header">
                In order to use the Wholetale app, you need to be able to sign in using Globus. Click below to find out more.
            </div>
            <a class="ui button" target="_blank" href="https://docs.globus.org/how-to/get-started/">Globus Howto</a>
        </div>
    </div>
{{/ui-accordion}}


