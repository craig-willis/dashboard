<div class="wt panel">
    <div class="wt paddleboard">
        <h2><img src="images/wholetale_logo_sm.png" />Current Tale
            <span style="float: right">


        {{#if model.url}}

                <a {{action 'openDeleteModal' model._id}}>
                <i class="red cancel icon"></i>
                </a>

                <a {{action 'stop'}}>
                <i class="stop icon"></i>
                </a>

                <a href="{{model.url}}" target="_blank">
                <i class="external alternate icon"></i>
                </a>
        {{/if}}

            </span>
        </h2>
    </div>



  {{#if model.url}}
        {{#if loadError}}
            <div class="placeholder message">
                <p>Sorry, could not load {{model.name}}. Press external icon on top right to launch in a new tab.</p>
            </div>
        {{else}}
            <iframe id="frontendDisplay"
                    src="{{model.url}}"
                    style="width:100%; height: 600px; padding: 0; margin: 0;"
                    class="ui basic segment"
            >
            </iframe>
        {{/if}}
      {{else}}
            <div class="placeholder message">
                <p>Choose from<br/>Launched Tales panel</p>
            </div>
      {{/if}}




    <div class="ui {{model._id}} modal" style="display: none">
        <i class="close icon"></i>
        <div class="header">
            Really Delete Instance?
        </div>
        <div class="image content">
            <div class="description">
                <p>This will permanently delete the '{{model.name}}' instance. Continue?</p>
            </div>
        </div>
        <div class="actions">
            <div class="ui black deny button" {{action 'denyDelete'}}>
                No
            </div>
            <div class="ui positive right labeled icon button" {{action 'approveDelete' model}}>
                Yes
                <i class="checkmark icon"></i>
            </div>
        </div>
    </div>

</div>

