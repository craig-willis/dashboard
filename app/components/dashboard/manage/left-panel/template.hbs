<div class="wt panel manage">
    <div class="wt paddleboard">
        {{!-- <h2><img src="images/wholetale_logo_sm.png" />Current Tale <i class="fas fa-expand right"></i></h2> --}}
        <h2><i class="far fa-hdd"></i> Data <span style="font-style:italic;">Import or link data to use in Tales</span></h2>
    </div>

    <div class="main-row">
        <div class="ui stackable grid">
            <div class="five wide column">
                {{#if currentFolderId}}
                    {{input type="file" value=file class="nice upload hidden" multiple=true}}
                    <button class="ui small blue button" {{action "openModal" "newfolder" on="click" }}>
                        {{!-- <i class="cloud upload icon"></i> --}}
                        <span>New Folder</span>
                    </button>
                {{/if}}
            </div>
            <div class="eleven wide column">
                {{ui/files/bread-crumbs currentNavTitle=currentNavTitle currentBreadCrumb=currentBreadCrumb fileBreadCrumbs=fileBreadCrumbs isMain=true action="breadcrumbClicked"}}
            </div>
        </div>
    </div>

    <div class="ui stackable grid">
        <div class="five wide column folder-navigator-container">
            <div class="ui collapsable grid folder-grid">
              {{ui/files/folder-navigator currentNavCommand=currentNavCommand action="navClicked"}}
            </div>
        </div>
        <div class="eleven wide column">
