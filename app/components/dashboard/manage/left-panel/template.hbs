                          </button>
                      {{/if}}
                    </div>
                </div>
                <div class="four wide column">
                    <div class="ui fluid green labeled icon button" {{action 'openModal' "harvester" on='click'}}>
                        <i class="plus icon"></i>
                        Add Data
                    </div>
                </div>
            </div> --}}
            <div class="ui collapsable grid" style="margin-left: 10px">
                <div class="sixteen wide right aligned column">
                  {{ui/files/directory-browser folderList=model.folderContents fileList=model.itemContents action="itemClicked"}}
                </div>
                <div class="sixteen wide column overlay">
                  {{#unless currentBreadCrumb.isCollection}}
                    {{ui/files/nice-dropzone folderId=currentFolderId refresh=(action 'refresh')}}
                  {{/unless}}
                </div>
            </div>
        </div>
