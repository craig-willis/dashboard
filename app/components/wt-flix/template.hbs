<style>
    .ui[class*="top attached"].label, .ui.attached.label {
        padding: 5px!important;
    }

    img {
        display: block;
        max-width:140px;
        max-height:140px;
        width: auto;
        height: auto;
    }

</style>
<div class="ui inverted grey segment">
    <div class="ui {{cardsPerRow}} doubling cards" style="padding: 5px 20px 5px 20px">

      {{#each modelsInView as |model|}}
            <div class="card">
                <div class="image" style="height: 140px">
                    <img src="{{model.icon}}">
                </div>
                <div class="content" style="color: #515151">
                  {{#ui-popup html=model.name}}
                      {{model.tagName}}
                  {{/ui-popup}}
                  {{#link-to modelView model class="ui tiny bottom right attached grey label"}}<i class="timy external icon" style="margin: 0;"></i>{{/link-to}}
                </div>
            </div>
      {{/each}}
    </div>

    <div class="ui grid">
        <div class="center aligned sixteen wide column">
            <div class="ui pagination menu">
                <a class="{{leftButtonState}} item" {{action "leftButtonClicked"}}>
                    <i class="caret left icon"></i>
                </a>
              {{#each paginateArray as |paginateItem|}}
                  <a class="{{paginateItem.state}} item" {{action "tabClicked" paginateItem.number}}>
                    {{paginateItem.number}}
                  </a>
              {{/each}}
                <a class="{{rightButtonState}} item" {{action "rightButtonClicked"}}>
                    <i class="caret right icon"></i>
                </a>
            </div>
        </div>
    </div>
</div>