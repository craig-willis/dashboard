<table class="ui very basic single line table" style="margin:0">
    <thead>
    <tr>
        <th>Name</th>
        <th>Created</th>
        <th>Last Modified</th>
        <th>Size</th>
    </tr></thead>
    <tbody>
    {{#each folderList as |item|}}
        <tr class="left aligned">
            <td>
                <a href="#" {{action "clickedFolder" item}}>
                    <i class="large folder outline icon"></i> {{item.name}}
                </a>
            </td>
            <td >
              {{moment-from-now item.created}}
            </td>
            <td >
              {{moment-from-now item.updated}}
            </td>
            <td >
              {{bytesToReadable item.size}}
            </td>
        </tr>
    {{/each}}
    {{#each fileList as |item|}}
        <tr class="left aligned">
            <td>
                <a href="#" {{action "clickedFile" item}}>
                  {{{file-icon-for item.name}}} {{item.name}}
                </a>

            </td>
            <td >
              {{moment-from-now item.created}}
            </td>
            <td >
              {{moment-from-now item.updated}}
            </td>
            <td >
              {{bytesToReadable item.size}}
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

{{#if showEditor}}
  {{code-editor content=textData fileID=fileIdentifier}}
{{/if}}
